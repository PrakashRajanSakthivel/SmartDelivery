{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "SmartOrderSystem",
    "Audience": "SmartOrderSystemUsers",
    "SecretKey": "VerySecretKeyForSigningTokens123!"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "Username": "elastic",
    "Password": "yourpassword"
  },
  "ConnectionStrings": {
    "PaymentDatabase": "Data Source=.;Initial Catalog=PaymentServiceDb;Integrated Security=True;TrustServerCertificate=True;"
  },
  "ExternalPaymentProvider": {
    "CreateIntentUrl": "https://mock-api.net/api/SmartDelivery/createintent",
    "ConfirmPaymentUrl": "https://mock-api.net/api/SmartDelivery/confirm",
    "TimeoutSeconds": 30,
    "RetryCount": 3,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerTimeout": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "paymentservice-logs-{0:yyyy.MM}",
          "autoRegisterTemplate": true,
          "batchPostingLimit": 10,
          "period": 2,
          "inlineFields": true,
          "bufferBaseFilename": "./logs/elasticsearch-buffer",
          "emitEventFailure": "WriteToSelfLog",
          "queueSizeLimit": 10000
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId" ],
    "Properties": {
      "Application": "paymentService",
      "Environment": "Development"
    }
  }


}
